@model Ds.App.ViewModels.NotaViewModel
@{
    ViewData["Title"] = "Editar Nota do ALuno(a) " + Model.Aluno.NomeCompleto;
}

<h1 style="padding-top: 30px">@ViewData["Title"] </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <vc:summary></vc:summary>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ValorNota" class="control-label"></label>
                <input asp-for="ValorNota" class="form-control" />
                <span asp-validation-for="ValorNota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisciplinaId" class="control-label"></label>
                <select asp-for="DisciplinaId" class="form-control" asp-items="@(new SelectList(Model.Disciplinas,"Id","NomeDisciplina"))">
                    <option></option>
                </select>

                <span asp-validation-for="DisciplinaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeriodoId" class="control-label"></label>
                <select asp-for="PeriodoId" class="form-control" asp-items="@(new SelectList(Model.Periodos,"Id","NomePeriodo"))">
                    <option></option>
                </select>
                <span asp-validation-for="PeriodoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AlunoId" class="control-label"></label>
                <select asp-for="AlunoId" class="form-control" asp-items="@(new SelectList(Model.Alunos,"Id","NomeCompleto"))">
                    <option></option>
                </select>
                <span asp-validation-for="AlunoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
