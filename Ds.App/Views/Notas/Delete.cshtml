@model Ds.App.ViewModels.NotaViewModel
@{
    ViewData["Title"] = "Exclusão de Nota";
}

<h1>@ViewData["Title"]</h1>

<vc:summary></vc:summary>
<hr />
<br />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorNota)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorNota)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disciplina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disciplina.NomeDisciplina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aluno.NomeCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Periodo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Periodo.NomePeriodo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
    </form>
</div>
